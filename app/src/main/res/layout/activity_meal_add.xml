                android:background="@color/colorAccent"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusedByDefault="true"
                android:hint="Name"
                android:textColorHint="@color/hintColor"
                android:padding="10dp"
                android:singleLine="true" />
